package com.jonLwiza.engine.baseConstructs{	import com.jonLwiza.engine.helperTypes.SND;		import flash.media.Sound;	import flash.media.SoundChannel;	import flash.media.SoundTransform;	import flash.net.URLRequest;	public class SoundHandler extends GeneralMotor	{		private var sound:Sound;		private var channel:SoundChannel;		public static var Vol:Number = 0.5		private var _vol:Number = 0.5;		private var resumeTime:Number;		private var trans:SoundTransform;		public function SoundHandler()		{			super();					}				protected function playSound(snd:SND):void		{			var soundFile:String = snd.name;						if(channel)			{				channel.stop();			}						sound = new Sound();			sound.load(new URLRequest(soundFile));						if(snd.vol == Number(null)|| SoundHandler.Vol < snd.vol)			trans = new SoundTransform(SoundHandler.Vol);			else			trans = new SoundTransform(snd.vol);															channel = sound.play(resumeTime);								}						public function get vol():Number		{			return _vol;		}		public function set vol(value:Number):void		{			_vol = value;		}			}}